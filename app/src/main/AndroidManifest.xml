<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prafulmishra.indiasummit">
<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splashscreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ParticipantActivity"
            android:label="@string/title_activity_participant"
            android:parentActivityName=".ApplyActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.prafulmishra.indiasummit.ApplyActivity" />
        </activity>
        <activity
            android:name=".TwentyoneActivity"
            android:label="@string/title_activity_twentyone"
            android:parentActivityName=".ApplyActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.prafulmishra.indiasummit.ApplyActivity" />
        </activity>
        <activity
            android:name=".WomenActivity"
            android:label="@string/title_activity_scrolling"
            android:parentActivityName=".ApplyActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.prafulmishra.indiasummit.ApplyActivity" />
        </activity>
        <activity android:name=".AboutUs" />
        <activity
            android:name=".ApplyActivity"
            android:label="@string/title_activity_apply"
            android:theme="@style/AppTheme" />
        <activity android:name=".ContactUs" />
        <activity android:name=".OurTeam" />
    </application>

</manifest>